@model IEnumerable<ProjetoBanco.Models.FormaPagamento>

@{
    ViewData["Title"] = "Index";
}

<h1>Forma Pagamento</h1>

<p>
    <a class="btn-criar" asp-action="Create">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeFormaPagamento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeFormaPagamento)
            </td>
            <td>
                <a class="a botao" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a class="a botao"asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a class="a botao" asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
