@model ProjetoBanco.Models.Viagem

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Viagem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ClienteId" class="control-label">Cliente</label>
                <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId"></select>
                <span asp-validation-for="ClienteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HospedagemId" class="control-label">Hospedagem</label>
                <select asp-for="HospedagemId" class="form-control" asp-items="ViewBag.HospedagemId"></select>
                <span asp-validation-for="HospedagemId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransporteId" class="control-label">Transporte</label>
                <select asp-for="TransporteId" class="form-control" asp-items="ViewBag.TransporteId"></select>
                <span asp-validation-for="TransporteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecoViagem" class="control-label">Preço</label>
                <input asp-for="PrecoViagem" class="form-control" />
                <span asp-validation-for="PrecoViagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FormaPagamentoId" class="control-label">Forma Pagamento</label>
                <select asp-for="FormaPagamentoId" class="form-control" asp-items="ViewBag.FormaPagamentoId"></select>
                <span asp-validation-for="FormaPagamentoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="a" asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
