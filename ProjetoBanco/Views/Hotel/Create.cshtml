@model ProjetoBanco.Models.Hotel

@{
    ViewData["Title"] = "Create";
}

<h1>Criar</h1>

<h4>Hotel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeHotel" class="control-label">Hotel</label>
                <input asp-for="NomeHotel" class="form-control" />
                <span asp-validation-for="NomeHotel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnderecoHotel" class="control-label">Endereço</label>
                <input asp-for="EnderecoHotel" class="form-control" />
                <span asp-validation-for="EnderecoHotel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="a" asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
